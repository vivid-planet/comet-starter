{
  "name": "site-vite-ssr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- tsx watch server.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "preview": "cross-env NODE_ENV=production node server",
    "generate-block-types": "comet generate-block-types --output-file ./src/blocks.generated.ts",
    "generate-block-types:watch": "chokidar -s \"block-meta.json\" -c \"npm run generate-block-types\"",
    "gql:types": "graphql-codegen-esm --config codegen.cjs",
    "gql:watch": "graphql-codegen-esm --watch  --config codegen.cjs",
    "intl:compile": "formatjs compile-folder --format simple --ast lang/starter-lang/site lang-compiled/",
    "intl:extract": "formatjs extract \"src/**/*.ts*\" --ignore **/*.d.ts --out-file lang-extracted/en.json --format simple --throws"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "cache-manager": "^5.0.0",
    "compression": "^1.8.0",
    "express": "^5.0.1",
    "hono": "^4.7.4",
    "lodash.isequal": "^4.5.0",
    "path-to-regexp": "^8.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-intl": "^7.1.6",
    "redraft": "^0.10.2",
    "scroll-into-view-if-needed": "^3.1.0",
    "sirv": "^3.0.1",
    "sitemap": "^8.0.0",
    "styled-components": "^6.1.15",
    "swiper": "^11.2.4",
    "usehooks-ts": "^3.1.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@comet/cli": "7.13.0",
    "@formatjs/cli": "^6.6.1",
    "@graphql-codegen/add": "^3.0.0",
    "@graphql-codegen/cli": "^2.0.0",
    "@graphql-codegen/import-types-preset": "^2.0.0",
    "@graphql-codegen/named-operations-object": "^2.0.0",
    "@graphql-codegen/near-operation-file-preset": "^2.5.0",
    "@graphql-codegen/typescript": "^2.0.0",
    "@graphql-codegen/typescript-operations": "^2.0.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "babel-plugin-styled-components": "^2.1.4",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.3",
    "typescript": "~5.7.3",
    "vite": "^6.1.1",
    "vite-env-only": "^3.0.3",
    "vite-plugin-babel": "^1.3.0"
  }
}
