{
    "name": "starter-site",
    "private": true,
    "scripts": {
        "build": "npm run intl:compile && run-p gql:types generate-block-types && tsc --project tsconfig.server.json && next build",
        "dev": "npm run intl:compile && run-s gql:types generate-block-types && tsc --project tsconfig.server.json && NODE_OPTIONS='--inspect=localhost:9230 --max-old-space-size=512' dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- node dist/server.js",
        "generate-block-types": "comet generate-block-types",
        "generate-block-types:watch": "chokidar -s \"block-meta.json\" -c \"npm run generate-block-types\"",
        "gql:types": "graphql-codegen",
        "gql:watch": "graphql-codegen --watch",
        "intl:compile": "formatjs compile-folder --format simple --ast lang/starter-lang/site lang-compiled/",
        "intl:extract": "formatjs extract \"src/**/*.ts*\" --ignore **/*.d.ts --out-file lang-extracted/en.json --format simple --throws",
        "prelint": "npm run intl:compile && run-p gql:types generate-block-types",
        "lint": "run-p lint:eslint lint:tsc lint:style intl:extract lint:knip",
        "lint:ci": "npm run lint",
        "lint:knip": "knip --exports --files --dependencies --tags=-knipignore",
        "lint:prettier": "npx prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:style": "npx stylelint '**/*.{ts,tsx,css}'",
        "lint:tsc": "tsc --project .",
        "serve": "NODE_ENV=production node dist/server.js",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored"
    },
    "dependencies": {
        "@comet/site-nextjs": "8.0.0-beta.6",
        "@fontsource/roboto": "^5.2.5",
        "@next/bundle-analyzer": "^14.2.30",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.56.1",
        "@opentelemetry/exporter-trace-otlp-http": "^0.57.2",
        "@opentelemetry/sdk-node": "^0.57.2",
        "graphql": "^15.10.1",
        "ioredis": "^5.6.1",
        "lru-cache": "^11.1.0",
        "next": "^14.2.30",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-intl": "^6.8.9",
        "redraft": "^0.10.2",
        "styled-components": "^6.1.18",
        "swiper": "^11.2.10"
    },
    "devDependencies": {
        "@comet/cli": "8.0.0-beta.6",
        "@comet/eslint-config": "8.0.0-beta.6",
        "@cspell/eslint-plugin": "^9.1.2",
        "@formatjs/cli": "^6.7.1",
        "@graphql-codegen/add": "^5.0.3",
        "@graphql-codegen/cli": "^5.0.7",
        "@graphql-codegen/named-operations-object": "^3.1.1",
        "@graphql-codegen/near-operation-file-preset": "^3.1.0",
        "@graphql-codegen/typescript": "^4.1.6",
        "@graphql-codegen/typescript-operations": "^4.6.1",
        "@parcel/watcher": "^2.5.1",
        "@types/node": "^22.14.1",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "chokidar-cli": "^3.0.0",
        "dotenv-cli": "^7.4.4",
        "eslint": "^9.30.0",
        "eslint-config-next": "^15.3.4",
        "knip": "^5.61.3",
        "npm-run-all2": "^7.0.2",
        "postcss-styled-syntax": "^0.7.1",
        "prettier": "^3.6.2",
        "stylelint": "^16.19.1",
        "stylelint-config-standard": "^36.0.1",
        "typescript": "5.8.3"
    },
    "engines": {
        "node": "22"
    }
}
