{
  "name": "create-comet-app",
  "version": "1.0.0",
  "bin": {
    "create-comet-app": "./bin/create-comet-app.js"
  },
  "files": [
    "bin/**/*.js",
    "lib/**/*.js"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "prestart": "npm run clean",
    "start": "tsc --watch --project tsconfig.json",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "lint": "npm run lint:eslint && npm run lint:tsc",
    "lint:eslint": "eslint --config .eslintrc.json --ext .ts,.tsx,.js,.jsx,.json,.md src/ package.json",
    "lint:tsc": "tsc --project ./tsconfig.lint.json",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-unused-imports": "^0.1.3",
    "prettier": "^2.1.2",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@types/prompts": "^2.4.4",
    "@types/rimraf": "^4.0.5"
  },
  "publishConfig": {
    "@comet:registry": "https://gitlab.vivid-planet.com/api/v4/projects/990/packages/npm/"
  },
  "dependencies": {
    "@comet/eslint-config": "^4.3.0",
    "commander": "^11.0.0",
    "ts-node": "^10.9.1",
    "kleur": "^4.1.5",
    "nanospinner": "^1.1.0",
    "glob": "^10.3.3",
    "rimraf": "^5.0.1"
  }
}
