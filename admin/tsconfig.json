{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "jsx": "react-jsx",
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        },
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "~/",
        "types": ["vite/client"]
    },
    "include": ["src/**/*"]
}
