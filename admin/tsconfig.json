{
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        },
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "include": ["src/**/*"]
}
