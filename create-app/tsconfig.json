{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "jsx": "react",
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        },
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
}
